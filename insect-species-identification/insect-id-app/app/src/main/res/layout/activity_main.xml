<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/insect_identification"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:padding="5dp"
            android:text="@string/use_model"
            android:textSize="16sp"
            android:gravity="end"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/modelTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:gravity="start"
            android:padding="5dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/image_to_be_classified"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/buttonPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/select_image" />

    <TextView
        android:id="@+id/possible_matches_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/possible_matches"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/darker_gray"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/outputText"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:gravity="center"
            android:textSize="18sp" />

    </ScrollView>


    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/signature_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developed_by_rakesh_malik_2025"
        android:textSize="11sp"
        android:gravity="center"
        android:padding="2dp"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>
